<Window x:Class="widget3.Views.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:widget3.Views.Main"
        xmlns:extensions="clr-namespace:widget3.Controls.Concrete.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="{Binding WindowHeight}" Width="{Binding WindowWidth}"
        Background="{Binding WindowBackground}"
        >

    <ItemsControl>
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Grid Grid.Row="1" extensions:DynamicGrid.ColumnCount="{Binding ColumnCount}" extensions:DynamicGrid.RowCount="{Binding RowCount}" extensions:DynamicGrid.CellSize="{Binding Path=Configuration.TileSize}" ShowGridLines="True">

                </Grid>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>

</Window>
