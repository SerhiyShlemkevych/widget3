<Page x:Class="widget3.Views.Settings.CteateTilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:widget3.Views.Settings"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="CteateTilePage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Content="{Binding Path=CurrentStep.PageHeader}" FontSize="25" Margin="5"/>
        <Frame Grid.Row="1" Content="{Binding Path=CurrentStep.Page}"/>
        <Button Content="{Binding LeftButtonContent}" Command="{Binding LeftButtonCommand}" Margin="10,10,0,0" Grid.Row="2" VerticalAlignment="Top" Height="30" HorizontalAlignment="Left" Width="75"/>
        <Button Content="{Binding RightButtonContent}" Command="{Binding RightButtonCommand, PresentationTraceSources.TraceLevel=High}"  Margin="0,10,10,0" Grid.Row="2" VerticalAlignment="Top" Height="30" HorizontalAlignment="Right" Width="75"/>
    </Grid>
</Page>
