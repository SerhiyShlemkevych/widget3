<asbtract:TileBase x:Class="widget3.Controls.Concrete.MainWindow.TaskTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:asbtract="clr-namespace:widget3.Controls.Abstract.Common"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:widget3.Controls.Concrete.MainWindow"
             mc:Ignorable="d" 
                   x:Name="tile"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Button Command="{Binding ElementName=tile, Path=Command}" CommandParameter="{Binding ElementName=tile, Path=CommandParameter}" Content="{Binding ElementName=tile, Path=Text}" FontSize="{Binding ElementName=tile, Path=FontSize}" Background="{Binding ElementName=tile, Path=Background}"/>
    </Grid>
</asbtract:TileBase>
